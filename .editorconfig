# EditorConfig is awesome: http://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.py]
max_line_length = 90
indent_size = 4

[*.{json,js}]
indent_size = 4

[*.{yaml,yml,html,css}]
indent_size = 2
